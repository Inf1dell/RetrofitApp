<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInActivity"
    tools:layout_editor_absoluteX="66dp"
    tools:layout_editor_absoluteY="1dp">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="188dp"
        android:text="Введите код из E-mail"
        android:textColor="#000000"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <EditText
            android:id="@+id/ECode1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="@drawable/code_style"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="none|number"
            android:maxEms="1"
            android:maxLength="1"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:nextFocusForward="@id/ECode2"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/ECode2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="@drawable/code_style"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="none|number"
            android:maxEms="1"
            android:maxLength="1"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:nextFocusForward="@id/ECode3"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/ECode3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="@drawable/code_style"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="none|number"
            android:maxEms="1"
            android:maxLength="1"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:nextFocusForward="@id/ECode4"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/ECode4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/code_style"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="none|number"
            android:maxEms="1"
            android:maxLength="1"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:textColor="#000000"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Отправить код повторно можно \nбудет через 59 секунд"
        android:textColor="#939396"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />
</androidx.constraintlayout.widget.ConstraintLayout>